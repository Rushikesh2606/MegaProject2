<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Details (Form 2)"
            android:textColor="#000"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Languages Spoken -->
        <EditText
            android:id="@+id/languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Languages Spoken"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Resume Upload -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/resume_uploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume Upload"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/resume"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:backgroundTint="#1EB980"
                android:text="Choose File"
                android:textColor="#fff"
                android:layout_width="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- Availability Status -->
        <Spinner

            android:id="@+id/availability_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Degree/Program Name -->
        <EditText
            android:id="@+id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Degree/Program Name"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Institute Name -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/institute"
            android:hint="Institute"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Graduation Year -->
        <EditText
            android:id="@+id/passout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:hint="Graduation Year"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#1EB980"
            android:textColor="#fff"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>