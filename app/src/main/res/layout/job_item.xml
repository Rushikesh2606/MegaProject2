<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/green"
    app:strokeWidth="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Posted Date: "
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="#424242"
            android:textSize="14sp"/>

        <!-- Chip Status -->
        <com.google.android.material.chip.Chip
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Status: "
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textSize="13sp"
            android:textColor="#1B5E20"
            app:chipBackgroundColor="#E8F5E9"
            app:chipStrokeColor="#A5D6A7"
            app:chipStrokeWidth="1dp"
            app:icon="@drawable/ic_status"
            app:iconSize="16dp"
            app:iconTint="#2E7D32"
            app:chipMinHeight="32dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"/>

        <!-- Bids -->
        <TextView
            android:id="@+id/tvBids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Bids Received: "
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="#424242"
            android:textSize="14sp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="View Details"
                android:textSize="13sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_info"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="@color/green"
                app:strokeColor="@color/green"
                app:strokeWidth="1dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
               />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Job"
                android:textSize="13sp"
                style="@style/Widget.Material3.Button"
                app:backgroundTint="#D32F2F"
                app:icon="@drawable/ic_close"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="#EF5350"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>