<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/txtId" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtJobId" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtFreelancer" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtReason" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtAnalyzer" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtPending" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtTimestamp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
