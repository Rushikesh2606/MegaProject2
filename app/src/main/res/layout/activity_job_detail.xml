<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3E50"
                android:paddingBottom="8dp" />

            <!-- Category -->
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#2980B9"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_category"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#34495E"
                android:lineSpacingMultiplier="1.5"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:background="@drawable/description_background"
                android:elevation="2dp"
                android:layout_marginTop="16dp" />

            <!-- Budget & Deadline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_budget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Budget"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textColor="#2ECC71"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/budget_background"
                    android:padding="10dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deadline"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textColor="#E74C3C"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/deadline_background"
                    android:padding="10dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Skills -->
            <TextView
                android:id="@+id/tv_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:drawableStart="@drawable/ic_skills"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="#34495E"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:background="@drawable/skills_background"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Experience -->
            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:drawableStart="@drawable/ic_experience"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="#34495E"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/experience_background"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Submit Proposal Button -->
            <Button
                android:id="@+id/btn_submit_proposal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Proposal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/green"
                android:layout_marginTop="24dp" />

            <!-- Download Attachment Button -->
            <Button
                android:id="@+id/btn_download_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Attachment"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/colorSecondary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
