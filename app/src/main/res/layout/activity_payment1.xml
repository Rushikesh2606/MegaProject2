<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCFA"
    android:scrollbars="none"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/payment_card_background"
        android:elevation="4dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secure Payment"
            android:textSize="24sp"
            android:textColor="#1A7559"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete your payment securely"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0F2E9"
            android:layout_marginBottom="24dp"/>

        <!-- Payment Amount Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="16sp"
            android:textColor="#1A7559"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/payment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$99.99"
            android:textSize="28sp"
            android:textColor="#1EB980"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Card Input Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="16sp"
            android:textColor="#1A7559"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <!-- Card Input Hints -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Card Number"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expiry"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CVC"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Stripe CardInputWidget -->
        <com.stripe.android.view.CardInputWidget
            android:id="@+id/cardInputWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            app:cardTint="#1EB980"/>

        <!-- Billing Information Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Billing Information"
            android:textSize="16sp"
            android:textColor="#1A7559"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Cardholder Name"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="#1EB980"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cardholder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Billing ZIP/Postal Code"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="#1EB980"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/billing_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Security Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Security"
            android:textSize="16sp"
            android:textColor="#1A7559"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_gravity="center_vertical"
                app:tint="#1EB980"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All transactions are secured with SSL encryption"
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shield"
                android:layout_gravity="center_vertical"
                app:tint="#1EB980"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your payment information is never stored"
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0F2E9"
            android:layout_marginBottom="24dp"/>

        <!-- Payment Button -->
        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Complete Payment"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:elevation="4dp"
            android:backgroundTint="#1EB980"/>

        <!-- Payment Methods -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted Payment Methods"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visa"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mastercard"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_amex"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
